<%- include('../partials/header') %> 

	<body>
		<header id="heading" class="box">
			<h1><%= listTitle %></h1>
		</header>

		<main class="box">
			<% listItems.forEach(item => { %>
			<form action="/delete" method="POST">
				<div class="item" >
					<input type="checkbox" name="id" value="<%= item._id %>" onchange="this.form.submit()"" />
					<p><%= item.name %></p>
				</div>
				<input type="hidden" name="listName" value="<%= listTitle %>">
			</form>
			<% }) %>

			<form action="/" method="post" class="item" autocomplete="off">
				<input type="text" name="newListItem" placeholder="New Item" required />
				<button type="submit" name="listName" value="<%= listTitle %>">
					+
				</button>`
			</form>
		</main>
	</body>

<%- include('../partials/footer') %> 

